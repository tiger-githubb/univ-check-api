{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "ES6",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "rootDir": "./src",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
 "exclude": ["node_modules"]
}